{
  "name": "@wmfs/pg-info",
  "version": "0.0.0-semantically-released",
  "description": "Grabs metadata from a PostgreSQL database",
  "author": "West Midlands Fire Service",
  "homepage": "https://github.com/wmfs/pg-info#readme",
  "keywords": [
    "tymly",
    "package",
    "pg",
    "postgres"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmfs/pg-info.git"
  },
  "bugs": {
    "url": "https://github.com/wmfs/pg-info/issues"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "async": "2.6.1",
    "boom": "7.2.0",
    "debug": "3.1.0",
    "lodash": "4.17.10"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-subset": "1.6.0",
    "codecov": "3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "5.2.0",
    "nyc": "12.0.2",
    "semantic-release": "^15.5.1",
    "standard": "11.0.1",
    "@wmfs/hl-pg-client": "1.1.3"
  },
  "scripts": {
    "lint": "standard",
    "test": "nyc mocha && standard",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {"type": "build", "scope":"deps", "release": "minor"},
        {"type": "build", "scope":"deps-dev", "release": "patch"}
      ]
    }
  }
}
